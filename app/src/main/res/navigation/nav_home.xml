<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mycondo.a99hub24.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/comingFragment"
        android:name="com.mycondo.a99hub24.ui.coming.ComingFragment"
        android:label="fragment_coming"
        tools:layout="@layout/fragment_coming" />
    <fragment
        android:id="@+id/profitLossFragment"
        android:name="com.mycondo.a99hub24.ui.profit_loss.ProfitLossFragment"
        android:label="fragment_profit_loss"
        tools:layout="@layout/fragment_profit_loss" />
    <dialog
        android:id="@+id/bottomSheetFragment"
        android:name="com.mycondo.a99hub24.ui.bottomsheet.BottomSheetFragment"
        android:label="fragment_bottom_sheet_list_dialog"
        tools:layout="@layout/fragment_bottom_sheet_list_dialog" >
        <action
            android:id="@+id/action_bottomSheetFragment_to_ledgerFragment"
            app:destination="@id/ledgerFragment" />
        <action
            android:id="@+id/action_bottomSheetFragment_to_rulesFragment"
            app:destination="@id/rulesFragment" />
    </dialog>
    <activity
        android:id="@+id/homeActivity"
        android:name="com.mycondo.a99hub24.ui.home.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
    <fragment
        android:id="@+id/ledgerFragment"
        android:name="com.mycondo.a99hub24.ui.my_ledger.LedgerFragment"
        android:label="fragment_ledger"
        tools:layout="@layout/fragment_ledger" />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.mycondo.a99hub24.ui.rules.RulesFragment"
        android:label="fragment_rules"
        tools:layout="@layout/fragment_rules" />
</navigation>